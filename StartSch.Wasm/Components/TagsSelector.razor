@rendermode InteractiveWebAssembly

@foreach (var tag in Tags.OrderBy(t => t.Id))
{
    <TagGroupToggle Tag="@tag" UpdateParent="@UpdateParent"/>
}

@code {
    [Parameter, EditorRequired] public required List<TagGroup> Tags { get; set; }
    [Parameter] public EventCallback UpdateParent { get; set; }
}