@rendermode InteractiveWebAssembly

<div style="display: flex; gap: 48px">
    <div>
        @foreach (var tag in _roots)
        {
            <TagGroupToggle Tag="@tag" OnClick="@(() => StateHasChanged())"/>
        }
    </div>
    <div>
        @foreach (var tag in _roots.SelectMany(l => l.SerializeSelection()))
        {
            <p>@tag</p>
        }
    </div>
</div>

@code {

    public IEnumerable<TagGroup> Tags =>
    [
        new("push", "Telefonos ertesitesek", [
            new("tanfolyam", "Tanfolyam"),
            new("esemény", "Esemény"),
        ]),
        new("email", "Email ertesitesek", [
            new("tanfolyam", "Tanfolyam"),
            new("esemény", "Esemény"),
        ]),
    ];

    public IEnumerable<TagGroup> Tags2 =>
    [
        new("push", null, [
            new("qpa", "QPA"),
            new("esemény"),
        ]),
        new("email", null, [
            new("qpa", "QPA"),
            new("esemény"),
        ]),
    ];

    List<TagGroup> _roots;

    public TagsSelector()
    {
        _roots = TagGroup.Merge(Tags.Concat(Tags2));
        TagGroup.DeserializeSelection(_roots, ["email.pincér.magyarosch", "push", "push.qpa"]);
    }

}